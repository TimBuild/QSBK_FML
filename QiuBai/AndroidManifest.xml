<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bt.qiubai"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/qiubai"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bt.qiubai.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CommonTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.CharacterDetailActivity"
            android:label="@string/title_activity_cd"
            android:screenOrientation="portrait"
            android:theme="@style/CharacterDetailTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.CommentActivity"
            android:label="@string/title_activity_comment"
            android:screenOrientation="portrait"
            android:theme="@style/CommentTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.PictureTextActivity"
            android:label="@string/title_activity_picture_text"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.bt.qiubai.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/CommonTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:theme="@style/CommonTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.ForgetPasswordActivity"
            android:label="title_activity_forget_passwrod"
            android:screenOrientation="portrait"
            android:theme="@style/CommonTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.PersonActivity"
            android:label="title_activity_person"
            android:screenOrientation="portrait"
            android:theme="@style/CommonTitleBarStyle" >
        </activity>
        <activity
            android:name="com.bt.qiubai.GuideActivity"
            android:label="@string/title_activity_guide"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bt.qiubai.WeatherActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.bt.qiubai.CityActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.bt.qiubai.WBShareActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bt.qiubai.WeiXinShareActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sdksample" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1104632167" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bt.qiubai.QQShareActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.bt.qiubai.FirstEnterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>