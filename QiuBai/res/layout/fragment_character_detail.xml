<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/base_white_bg"
        android:divider="@drawable/character_lin_divider"
        android:orientation="vertical"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/fragment_character_detail_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="5"
            android:textColor="@color/fragment_character_black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/fragment_character_detail_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/character_list_other_segments_support" />

            <TextView
                android:id="@+id/fragment_character_detail_support_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_character_detail_support"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/fragment_character_detail_support"
                android:text="1024"
                android:textColor="@color/fragment_character_black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/fragment_character_detail_tread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/fragment_character_detail_support_text"
                android:paddingTop="10dp"
                android:src="@drawable/character_list_other_segments_tread" />

            <TextView
                android:id="@+id/fragment_character_detail_tread_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_character_detail_support"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/fragment_character_detail_tread"
                android:text="10"
                android:textColor="@color/fragment_character_black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/fragment_character_detail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/fragment_character_detail_tread_text"
                android:paddingTop="5dp"
                android:src="@drawable/character_list_other_segments_share" />

            <TextView
                android:id="@+id/fragment_character_detail_share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_character_detail_support"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/fragment_character_detail_share"
                android:text="分享"
                android:textColor="@color/fragment_character_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_character_detail_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_character_detail_support"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:text="跟帖"
                android:textColor="@color/fragment_character_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_character_detail_follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_character_detail_support"
                android:layout_centerInParent="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/fragment_character_detail_follow"
                android:text="300"
                android:textColor="@color/fragment_character_black"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>