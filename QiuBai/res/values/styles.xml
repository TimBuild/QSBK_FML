<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    
    <!-- DetailActivity -->
    <style name="DetailCustomWindowTitleBackground">
        <item name="android:background">@drawable/detail_title_bar_bg</item>
    </style>

    <style name="DetailTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/DetailCustomWindowTitleBackground</item>
    </style>

    <style name="DetailActionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/detail_action_bar_panel_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <!-- Comment Activity -->
    <style name="CommentCustomWindowTitleBackground">
        <item name="android:background">@drawable/detail_title_bar_bg</item>
    </style>

    <style name="CommentTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CommentCustomWindowTitleBackground</item>
    </style>

    <!-- Custom MainTitleBarStyle -->
    <style name="MainTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/MainCustomWindowTitleBackground</item>
    </style>
    
    <style name="MainCustomWindowTitleBackground">
        <item name="android:background">@drawable/main_title_bar_bg</item>
    </style>

</resources>