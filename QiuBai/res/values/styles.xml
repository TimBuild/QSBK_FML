<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    
    <!-- Common -->
    <style name="CommonActionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/common_action_bar_panel_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/common_dialog_bg_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="CommonProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/common_progress_dialog_bg_color</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <!-- CharacterDetailActivity -->
    <style name="CharacterDetailCustomWindowTitleBackground">
        <item name="android:background">@drawable/cd_title_bar_bg</item>
    </style>

    <style name="CharacterDetailTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CharacterDetailCustomWindowTitleBackground</item>
    </style>

    <!-- Comment Activity -->
    <style name="CommentCustomWindowTitleBackground">
        <item name="android:background">@drawable/cd_title_bar_bg</item>
    </style>

    <style name="CommentTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CommentCustomWindowTitleBackground</item>
    </style>
    
    <!-- Login Activity -->
    <style name="LoginWindowTitleBackground">
        <item name="android:background">@color/login_title_bar_bg_color</item>
    </style>
    
    <style name="LoginTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/LoginWindowTitleBackground</item>
    </style>

    <!-- Register Activity -->
    <style name="RegisterWindowTitleBackground">
        <item name="android:background">@color/register_title_bar_bg_color</item>
    </style>
    
    <style name="RegisterTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/RegisterWindowTitleBackground</item>
    </style>
    
    <!-- Forget Password Activity -->
    <style name="ForgetPasswordWindowTitleBackground">
        <item name="android:background">@color/fpw_title_bar_bg_color</item>
    </style>
    
    <style name="ForgetPasswrodTitleBarStyle" parent="android:Theme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/ForgetPasswordWindowTitleBackground</item>
    </style>
    
    <!-- Custom MainTitleBarStyle -->
    <style name="MainTitleBarStyle" parent="AppBaseTheme">
        <item name="android:windowTitleSize">45dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/MainCustomWindowTitleBackground</item>
        <item name="vpiTabPageIndicatorStyle">@style/MyWidget.TabPageIndicator</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:animationDuration">5000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="MainCustomWindowTitleBackground">
        <item name="android:background">@drawable/main_title_bar_bg</item>
    </style>

    <style name="MyWidget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/MyTextAppearance.TabPageIndicator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyTextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textColor">@color/activity_main_gray</item>
    </style>
    
    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/character_custom_progress_bar</item>
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>